<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.9.0/css/all.css">
  </head>

  <body>
     <% if user_signed_in? %>
      <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
      <a class="navbar-brand" href="/">
        <span>Books</span>
      </a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          <li class="fas fa-home nav-link text-light"><%= link_to "Home",@user %></li>
          <li class="fas fa-link nav-link text-light"><%= link_to "User",users_path %></li>
          <li class="fas fa-user-plus nav-link text-light"><%= link_to "Books",books_path %></li>
          <li class="fas fa-sign-out-alt nav-link text-light"><%= link_to "logout", destroy_user_session_path, method: :delete %></li>
        </ul>
      </div>
      </div>
      </nav>
    </header>
    <p class="notice"><%= notice %></p>
    <% else %>
       <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
      <a class="navbar-brand" href="/"><span>Bookers</span></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          <li class="fas fa-home nav-link text-light"><%= link_to "Home",root_path %></li>
          <li class="fas fa-link nav-link text-light"><%= link_to "about",homes_about_path %></li>
          <li class="fas fa-user-plus nav-link text-light"><%= link_to "Sign up",new_user_registration_path %></li>
          <li class="fas fa-sign-in-alt nav-link text-light"><%= link_to "log in",new_user_session_path %></li>
        </ul>
      </div>
      </div>
      </nav>
    </header>
    <p class="notice"><%= notice %></p>
    <% end %>
    <%= yield %>
  </body>
</html>
