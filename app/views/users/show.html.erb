<%= render 'users/profile', user: @user %>
<<%= render 'books/new', book: @book %>

  <div class="col-lg-9">
    <h1>Books</h1>
    <table>
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
        <tr>
        <td><%= link_to (attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg"),user_path(@user) %></td>
        <td><%= link_to book.title,book_path(book) %></td>
        <td><%= book.body %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  </div>
</div>