<%= render 'users/profile', user: @user %>
<<%= render 'books/new', book: @book %>


  <div class="col-lg-9">
    <h1>Books</h1>
    <table>
      <tbody>
        <% @books.each do |book| %>
        <tr>
          <td>
          <td>
          <%= link_to (attachment_image_tag book.user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg"),user_path(@user) %>
          <p><%= book.user.name %>
          </td>
          <th>
          <%= link_to book.title,book_path(book) %>
          </td>
          <%= book.body %>
          <td>
          <% if current_user.id == book.user_id %>
          <td><%= button_to "Edit", {controller: 'books', action: 'edit'}, {method: :get, class: "mybutton"} %></td>
          <td><%= button_to "Destroy", {controller: 'books', action: 'destroy'}, {method: :delete,  "data-confirm" => "本当に削除しますか？",class: "mybutton"} %></td>
          <% end %>
          </td>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  </div>
</div>