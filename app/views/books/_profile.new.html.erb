<div class="container">
  <div class="row">

  <div class="col-lg-3">
  <h1>User info</h1>
    <%= attachment_image_tag user, :profile_image_id, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
    <table class="table">
    <tbody>
    <tr>
    <td>name</td>
    <td><%= user.name %></td>
    </tr>
    <tr>
    <td>introduction</td>
    <td><%= user.introduction %></td>
    </tr>
    </tbody>
  </table>
  <h1>New book</h1>
  <%= form_with model: book, url:'/books', local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
  <% end %>
  </div>